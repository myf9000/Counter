<% provide(:title, @sentence.title) %>

<div class="container-fluid">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">

        <div class="col-md-3">
          <%= link_to image_tag('logo3.png'), root_path %>
        </div> 

        <div class="col-md-9">
         <h3><%= @sentence.title %></h3>
         <br>
        </div>

        <div class="col-md-12">
        </div>
        <div class="col-md-6">
        <div class="panel panel-default">
         <div class="panel-body">
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th><h4>Statistic:</h4></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>All characters:</td>
                <td><%= @character_count %></td>
              </tr>
              <tr>
                <td>Characters without spaces:</td>
                <td><%= @character_count_nospaces %></td>
              </tr>
              <tr>
                <td>Words: </td>
                <td><%= @word_count %></td>
              </tr>
              <tr>
                <td>Sentence:</td>
                <td><%= @sentence_count %></td>
              </tr>
              <tr>
                <td>Average characters in one word:</td>
                <td><%= (@character_count_nospaces.to_f/@word_count).round(2) %></td>
              </tr>
              <tr>
                <td>Average words in one sentence:</td>
                <td><%= (@word_count.to_f/@sentence_count).round(2) %> </td>
              </tr>
              <tr>
                <td>Percente good words:</td>
                <td><%= @good_percentage %>%</td>
              </tr>
            </tbody>
          </table>
        </div>
        </div>
        </div>
  
        <div class="col-md-6">
          <%= pie_chart Sentence.group(:title).count %>
        </div>

        <div class="col-md-12">
          <div class="panel panel-default">
             <div class="panel-body">
              <h4>Summary:</h4>
             </div>
              <div class="panel-footer">
                 <p><b>Sentences: </b><%= @ideal_sentences %></p>
              </div>
            </div>
        </div>

        <div class="col-md-12">
           <p style="text-align:center">
            <%= link_to new_sentence_path, class: "btn btn-primary" do %><span class="glyphicon glyphicon-chevron-left"></span> Back<% end %>
            <%= link_to new_sentence_path, class: "btn btn-success" do %><span class="glyphicon glyphicon-envelope"></span>  Send in<% end %>
            <%= link_to new_sentence_path, class: "btn btn-success" do%><span class="glyphicon glyphicon-print"></span> Print <% end %>
           </p>
        </div>
       
      </div>
    </div>
  </div>
</div>
<br>
<br>
<br>
<br>